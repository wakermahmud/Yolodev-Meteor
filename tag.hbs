{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{! Everything inside the #author tags pulls data from the author }}
<div class="bg-wrapper post-list">
  <main id="content" class="content flex-none self-center outer tag-list" role="main">
    {{#tag}}
      <paper-material elevation="1" animated>
        <header class="main-header tag-head">
          <h2 class="tag-name">{{name}}</h2>
        </header>
        <section class="tag-info layout horizontal">
          {{#if image}}
            <iron-image class="tag-image flex-none" src="{{image}}" sizing="cover" style="width: 200px; height: 200px; border-radius: 50%; float: left;" alt="{{name}}'s Picture"></iron-image>
          {{/if}}
          
          <div class="tag-meta flex">
            <p class="tag-description">{{description}}</p>
            <span class="tag-stats">{{plural ../pagination.total empty='No posts.' singular='% post in total.' plural='% posts in total.'}}</span>
          </div>
        </section>
      </paper-material>
    {{/tag}}

    {{! The main content area on the homepage }}

    {{! The tag below includes the post loop - partials/loop.hbs }}
    {{> "loop"}}

  </main>
</div>
