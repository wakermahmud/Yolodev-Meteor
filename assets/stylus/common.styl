@require 'variables'

// Shrinking header bar
paper-scroll-header-panel
  position: absolute
  top: 0
  right: 0
  bottom: 0
  left: 0
  background-color: #2E3039 !important

  paper-toolbar
    background-color: transparent !important

    .title
      font-size: 40px
      margin-left: 60px
      -webkit-font-feature-settings: 'dlig' 1, 'liga' 1, 'lnum' 1, 'kern' 1
      -moz-font-feature-settings: 'dlig' 1, 'liga' 1, 'lnum' 1, 'kern' 1
      -o-font-feature-settings: 'dlig' 1, 'liga' 1, 'lnum' 1, 'kern' 1
      font-family: "Open Sans", sans-serif
      text-rendering: geometricPrecision

    a, a:hover
      color: inherit
      text-decoration: none

    iron-icon
      margin: 0 8px

.outer
  position: relative
  max-width: outer-width
  margin: 0 auto

.inner
  position: relative
  max-width: outer-width - (paper-content-inset * 2)
  margin: 0 auto

.bg-wrapper
  background-color: bg-color
  padding-top: 20px
  padding-bottom: 20px
  min-height: 300px
  position: relative

iron-image
  background-color: bg-color

footer.site-footer
  background-color: #2e3039
  padding-top: 60px
  padding-bottom: 40px
  padding-left: 15px
  padding-right: 15px

  &, a
    color: #aaa
